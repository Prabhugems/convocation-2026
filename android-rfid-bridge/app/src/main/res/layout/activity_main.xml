<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding">

        <!-- App Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/section_gap"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_manage"
                android:contentDescription="@string/app_name"
                app:tint="@color/cyan_primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subtitle"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_preferences"
                android:contentDescription="@string/settings_title"
                android:scaleType="centerInside"
                app:tint="@color/text_secondary" />

        </LinearLayout>

        <!-- Card: Bridge Status -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/section_gap"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="@dimen/card_radius"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="@dimen/card_stroke_width"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <!-- Section header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/header_bridge_status"
                    android:textColor="@color/cyan_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp" />

                <!-- Status row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:id="@+id/statusDot"
                        android:layout_width="@dimen/status_dot_size"
                        android:layout_height="@dimen/status_dot_size"
                        android:background="@drawable/bg_status_dot" />

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_starting"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginBottom="12dp" />

                <!-- Server URL row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_server_url"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/serverUrlText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

                <!-- Power Level row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_power_level"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/powerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26 dBm"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Tags Scanned row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_tags_scanned"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/scanCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/cyan_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card: Barcode Scanner -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/section_gap"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="@dimen/card_radius"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="@dimen/card_stroke_width"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <!-- Section header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/header_barcode_scanner"
                    android:textColor="@color/cyan_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp" />

                <!-- Scan button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/scanBarcodeButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/btn_scan_barcode"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    app:icon="@android:drawable/ic_menu_camera"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/cyan_dark" />

                <!-- Last Barcode result (hidden until first scan) -->
                <LinearLayout
                    android:id="@+id/lastBarcodeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/cyan_bg"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_last_barcode"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/lastBarcodeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card: Scan History -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/section_gap"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="@dimen/card_radius"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="@dimen/card_stroke_width"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <!-- Section header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/header_scan_history"
                    android:textColor="@color/cyan_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/scanHistoryContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Toggle Button (Stop / Start Bridge) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggleButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_small"
            android:text="@string/btn_stop_bridge"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            app:strokeColor="@color/status_red"
            app:strokeWidth="2dp"
            android:textColor="@color/status_red" />

    </LinearLayout>

</ScrollView>
